<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:id = "@+id/background"
    android:orientation="vertical"
    android:background="@drawable/challenge_background_1"
    tools:context="com.akili.etc.triviacrashsaga.PartyMode.PartyHintActivity">


    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="24sp"
            android:gravity="center"
            android:id="@+id/hintText" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:paddingTop="20dp"
            android:id="@+id/roundText"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
        android:gravity="left"
        android:id="@+id/instructionText"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
        android:gravity="left"
        android:id="@+id/instructionText2"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="50dp" />
    <!--</RelativeLayout>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <info.hoang8f.widget.FButton
            fbutton:buttonColor="@color/trivia_quiz_next_button_color"
            fbutton:shadowColor="@color/trivia_quiz_next_button_shadow_color"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="15dp"
            android:id="@+id/nextButtonHint"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="Next"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:background="@color/trivia_quiz_next_button_color"
            android:layout_marginEnd="29dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="337dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <info.hoang8f.widget.FButton
        fbutton:buttonColor="@color/trivia_quiz_next_button_color"
        fbutton:shadowColor="@color/trivia_quiz_next_button_shadow_color"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="15dp"
        android:id="@+id/startButtonHint"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="Start"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:background="@color/trivia_quiz_next_button_color"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="217dp" />

</RelativeLayout>
