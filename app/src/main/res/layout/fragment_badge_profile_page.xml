<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.akili.etc.triviacrashsaga.BadgeProfilePage">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Your Achievements!"
            android:textSize="22sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/achievementImageView"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/achievementImageView"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <TextView android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/achievementDescriptionText"
                android:textSize="22sp"
                android:textColor="#000000"
                android:text="You don't have any badges"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/achievementImageView"
                android:gravity="center_vertical"
                android:layout_marginRight="20dp" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:background="@color/navigation_color"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <GridView
            android:id="@+id/gridView"
            android:background="#eeeeee"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:columnWidth="100dp"
            android:drawSelectorOnTop="true"
            android:gravity="center"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp"
            android:focusable="true"
            android:clickable="true"/>

    </LinearLayout>

</LinearLayout>
