<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/challengeBackground"
    android:background="@drawable/challenge_background_2"
    tools:context="com.akili.etc.triviacrashsaga.PartyMode.ChallengeReadyActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="100dp"
            android:text="The Topic"
            android:textSize="35sp"
            android:textColor="#000000"
            android:id="@+id/topicLabel"
            android:layout_gravity="center_horizontal"
            android:lineSpacingMultiplier="1.0"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="question body"
            android:textSize="24sp"
            android:textColor="#000000"
            android:id="@+id/normalTextView"
            android:layout_gravity="center_horizontal"
            android:lineSpacingMultiplier="1.0"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <com.github.lzyzsd.circleprogress.DonutProgress
        android:id="@+id/progressBar"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:layout_gravity = "center_horizontal"
        app:donut_progress="100"
        app:donut_finished_color="@color/navigation_color"
        app:donut_finished_stroke_width="15dp"
        app:donut_unfinished_stroke_width="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="extra stuff"
        android:textSize="24sp"
        android:textColor="#000000"
        android:id="@+id/extraTextView"
        android:layout_gravity="center_horizontal"
        android:lineSpacingMultiplier="1.0"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp" />

</LinearLayout>
