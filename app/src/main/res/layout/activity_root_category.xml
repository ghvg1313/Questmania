<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.akili.etc.triviacrashsaga.RootCategoryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="My Recent Interests"
            android:id="@+id/textView"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_alignBottom="@+id/allInterestButton"
            android:layout_centerHorizontal="true" />

        <info.hoang8f.widget.FButton
            fbutton:buttonColor="@color/trivia_quiz_answer_color"
            fbutton:shadowColor="@color/trivia_quiz_answer_shadow"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="15dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/allInterestButton"
            android:text = "See all"
            android:textColor = "#000000"
            android:textSize = "16sp"
            android:layout_weight="0.11"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true" />

    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns = "0,1,2"
        android:layout_marginTop="0dp">

         <TableRow
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

             <LinearLayout
                 android:orientation="vertical"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">
                 <ImageButton
                     android:layout_width="120dp"
                     android:layout_height="120dp"
                     android:id="@+id/imageButton1"
                     android:background="@color/fbutton_color_transparent"
                     android:src="@drawable/category_doctor"
                     android:scaleType="fitXY"
                     android:layout_gravity="center_horizontal"
                     android:layout_marginTop="20dp"
                     android:layout_marginBottom="15dp" />
                 <TextView
                     android:layout_width="100dp"
                     android:layout_height="wrap_content"
                     android:textAppearance="?android:attr/textAppearanceSmall"
                     android:text="Small Text"
                     android:id="@+id/textView1"
                     android:textSize="18dp"
                     android:textColor="#999999"
                     android:layout_gravity="center_horizontal"
                     android:layout_marginBottom="20dp"
                     android:gravity="center_horizontal" />
             </LinearLayout>

             <LinearLayout
                 android:orientation="vertical"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">
                 <ImageButton
                     android:layout_width="120dp"
                     android:layout_height="120dp"
                     android:id="@+id/imageButton2"
                     android:background="@color/fbutton_color_transparent"
                     android:src="@drawable/category_doctor"
                     android:scaleType="fitXY"
                     android:layout_gravity="center_horizontal"
                     android:layout_marginTop="20dp"
                     android:layout_marginBottom="15dp" />
                 <TextView
                     android:layout_width="100dp"
                     android:layout_height="wrap_content"
                     android:textAppearance="?android:attr/textAppearanceSmall"
                     android:text="Small Text"
                     android:id="@+id/textView2"
                     android:textSize="18dp"
                     android:textColor="#999999"
                     android:layout_gravity="center_horizontal"
                     android:layout_marginBottom="20dp"
                     android:gravity="center_horizontal" />
             </LinearLayout>

             <LinearLayout
                 android:orientation="vertical"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">
                 <ImageButton
                     android:layout_width="120dp"
                     android:layout_height="120dp"
                     android:id="@+id/imageButton3"
                     android:background="@color/fbutton_color_transparent"
                     android:src="@drawable/category_doctor"
                     android:scaleType="fitXY"
                     android:layout_gravity="center_horizontal"
                     android:layout_marginTop="20dp"
                     android:layout_marginBottom="15dp" />
                 <TextView
                     android:layout_width="100dp"
                     android:layout_height="wrap_content"
                     android:textAppearance="?android:attr/textAppearanceSmall"
                     android:text="Small Text"
                     android:id="@+id/textView3"
                     android:textSize="18dp"
                     android:textColor="#999999"
                     android:layout_gravity="center_horizontal"
                     android:layout_marginBottom="20dp"
                     android:gravity="center_horizontal" />
             </LinearLayout>

         </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/imageButton4"
                    android:background="@color/fbutton_color_transparent"
                    android:src="@drawable/category_doctor"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="15dp" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/textView4"
                    android:textSize="18dp"
                    android:textColor="#999999"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/imageButton5"
                    android:background="@color/fbutton_color_transparent"
                    android:src="@drawable/category_doctor"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="15dp" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/textView5"
                    android:textSize="18dp"
                    android:textColor="#999999"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/imageButton6"
                    android:background="@color/fbutton_color_transparent"
                    android:src="@drawable/category_doctor"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="15dp" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Add an interest!"
                    android:id="@+id/textView6"
                    android:textSize="18dp"
                    android:textColor="#999999"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_horizontal" />
            </LinearLayout>

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:weightSum="1"
        android:background="#80CBC4">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical">

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/challengeButton"
                android:background="@color/fbutton_color_transparent"
                android:src="@drawable/category_doctor"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/challengeTitleTextView"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="360sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Featured Interest"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="0.04"
            android:paddingTop="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/challengeDescriptionText"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="0.41"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp" />

        </LinearLayout>

        <info.hoang8f.widget.FButton
            fbutton:buttonColor="@color/trivia_quiz_answer_color"
            fbutton:shadowColor="@color/trivia_quiz_answer_shadow"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seeMoreButton"
            android:text = "See more"
            android:textColor = "#000000"
            android:textSize = "16sp"
            android:layout_weight="0.11"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns = "0,1"
        android:layout_marginTop="20dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <info.hoang8f.widget.FButton
                fbutton:buttonColor="@color/trivia_quiz_answer_color"
                fbutton:shadowColor="@color/trivia_quiz_answer_shadow"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="15dp"
                android:layout_width="131dp"
                android:layout_height="101dp"
                android:id="@+id/practiseButton"
                android:drawableBottom="@drawable/practise_button_icon"
                android:textColor = "#000000"
                android:textSize = "20sp"
                android:layout_weight="0.11"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp" />

            <info.hoang8f.widget.FButton
                fbutton:buttonColor="@color/trivia_quiz_answer_color"
                fbutton:shadowColor="@color/trivia_quiz_answer_shadow"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="15dp"
                android:drawableBottom="@drawable/profile_button_icon"
                android:layout_width="131dp"
                android:layout_height="101dp"
                android:id="@+id/profileButton"
                android:textColor = "#000000"
                android:textSize = "20sp"
                android:layout_weight="0.11"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp" />

        </TableRow>
    </TableLayout>


</LinearLayout>
