<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/challengeBackground"
    android:background="@drawable/challenge_background_2"
    tools:context="com.akili.etc.triviacrashsaga.PartyMode.ChallengePreTextActivity">

    <ImageView
        android:layout_width="320dp"
        android:layout_height="240dp"
        android:id="@+id/videoView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Challengers, you are running for President of the country of Camella! Now, it is time for the debate!"
        android:textSize="24sp"
        android:textColor="#000000"
        android:id="@+id/preText"
        android:lineSpacingMultiplier="1.1"
        android:gravity="center_horizontal"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:id = "@+id/indexButtonsLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_horizontal"
        android:paddingTop="0dp"
        android:layout_marginTop="40dp">

        <info.hoang8f.widget.FButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Prev"
            android:id="@+id/previousButton"
            android:textColor="#000000"
            android:textSize="20sp"
            fbutton:buttonColor="@color/challenge_quiz_button_p1"
            fbutton:shadowColor="@color/challenge_quiz_button_p1_shadow"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <info.hoang8f.widget.FButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/nextButton"
            android:textColor="#000000"
            android:textSize="20sp"
            fbutton:buttonColor="@color/challenge_quiz_button_p1"
            fbutton:shadowColor="@color/challenge_quiz_button_p1_shadow"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id = "@+id/proceedButtonsLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp">

        <info.hoang8f.widget.FButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Let's Begin!"
            android:id="@+id/beginButton"
            android:textColor="#000000"
            android:textSize="20sp"
            fbutton:buttonColor="@color/challenge_quiz_button_p1"
            fbutton:shadowColor="@color/challenge_quiz_button_p1_shadow"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="8dp"
            android:layout_marginBottom="20dp" />

        <info.hoang8f.widget.FButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="No, take me back"
            android:id="@+id/backButton"
            android:textColor="#000000"
            android:textSize="20sp"
            fbutton:buttonColor="@color/challenge_quiz_button_p1"
            fbutton:shadowColor="@color/challenge_quiz_button_p1_shadow"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="8dp" />

    </LinearLayout>

</LinearLayout>
