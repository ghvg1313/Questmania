<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="15 Nov 2015"
        android:id="@+id/dateText"
        android:textColor="@color/navigation_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textAlignment="center" />

    <TextView
        android:text="Kanye West Completed Beat Taylor Swift Up!"
        android:id="@+id/descriptionText"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center" />

    <TextView
        android:text="Kanye West Completed Beat Taylor Swift Up!"
        android:id="@+id/moreContentText"
        android:textColor="#000000"
        android:background="@color/light_navigation_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginBottom="10dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/navigation_color"
        android:layout_height="15dp"/>

</LinearLayout>