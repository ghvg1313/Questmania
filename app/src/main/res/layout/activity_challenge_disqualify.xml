<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/challengeBackground"
    android:background="@drawable/challenge_forum_background"
    tools:context="com.akili.etc.triviacrashsaga.PartyMode.ChallengeDisqualifyActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:id="@+id/titleText"
        android:layout_gravity="center"
        android:text="Challenge Title"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="0dp"

        android:textColor="#000000"
        android:gravity="center_horizontal|center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follow the instructions"
        android:textSize="30sp"
        android:textColor="#000000"
        android:id="@+id/instructionLabel"
        android:layout_gravity="center_horizontal"
        android:lineSpacingMultiplier="1.0"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:paddingTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which Challenge is the best Listener?\nThe Moderator will clap..."
        android:textSize="24sp"
        android:textColor="#000000"
        android:id="@+id/standardTextView"
        android:layout_gravity="center_horizontal"
        android:lineSpacingMultiplier="1.0"
        android:gravity="center_horizontal"
        android:paddingTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disqualify"
        android:textSize="30sp"
        android:textColor="#000000"
        android:id="@+id/disqualifyLabelView"
        android:layout_gravity="center_horizontal"
        android:lineSpacingMultiplier="1.0"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:paddingTop="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonArea1"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp">

        <info.hoang8f.widget.FButton
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="Done!"
            android:layout_gravity="center_horizontal"
            android:id="@+id/player1Button"
            fbutton:buttonColor="@color/color_challenge_button_positive_pink"
            fbutton:shadowColor="@color/color_challenge_button_positive_pink_shadow"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <info.hoang8f.widget.FButton
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="Done!"
            android:layout_gravity="center_horizontal"
            android:id="@+id/player2Button"
            fbutton:buttonColor="@color/disqualify_button_p1"
            fbutton:shadowColor="@color/disqualify_button_p1_shadow"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <info.hoang8f.widget.FButton
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="Done!"
            android:layout_gravity="center_horizontal"
            android:id="@+id/player3Button"
            fbutton:buttonColor="@color/disqualify_button_p2"
            fbutton:shadowColor="@color/disqualify_button_p2_shadow"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonArea2"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <info.hoang8f.widget.FButton
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="Done!"
            android:layout_gravity="center_horizontal"
            android:id="@+id/player4Button"
            fbutton:buttonColor="@color/disqualify_button_p3"
            fbutton:shadowColor="@color/disqualify_button_p3_shadow"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <info.hoang8f.widget.FButton
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="Done!"
            android:layout_gravity="center_horizontal"
            android:id="@+id/player5Button"
            fbutton:buttonColor="@color/disqualify_button_p4"
            fbutton:shadowColor="@color/disqualify_button_p4_shadow"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <info.hoang8f.widget.FButton
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="Done!"
            android:layout_gravity="center_horizontal"
            android:id="@+id/player6Button"
            fbutton:buttonColor="@color/disqualify_button_p5"
            fbutton:shadowColor="@color/disqualify_button_p5_shadow"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </LinearLayout>

    <info.hoang8f.widget.FButton
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="Restart the challenge"
        android:layout_gravity="center_horizontal|left"
        android:id="@+id/resetButton"
        fbutton:buttonColor="@color/color_challenge_button_positive_pink"
        fbutton:shadowColor="@color/color_challenge_button_positive_pink_shadow"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:layout_marginTop="320dp"
        android:orientation="vertical" />

</LinearLayout>
