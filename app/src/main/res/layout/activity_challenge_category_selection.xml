<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/part_category_selct"
    tools:context="com.akili.etc.triviacrashsaga.PartyMode.ChallengeCategorySelection">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="instruction"
            android:textSize="23sp"
            android:gravity="left"
            android:id="@+id/insText"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="342dp"
            android:layout_below="@+id/chooseIdentity"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="instruction"
            android:textSize="29sp"
            android:id="@+id/chooseIdentity"
            android:layout_marginTop="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="locked"
            android:id="@+id/textView2"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_below="@+id/imageButton2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp" />

        <ImageButton
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:id="@+id/imageButton2"
            android:clickable="true"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:layout_marginTop="115dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=" Topic 1"
            android:id="@+id/textView1"
            android:clickable="true"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=" locked"
            android:id="@+id/textView3"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="25dp"
            android:paddingEnd="0dp"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="42dp" />

        <ImageButton
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:id="@+id/imageButton1"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:clickable="true"
            android:layout_gravity="center"
            android:layout_above="@+id/textView2"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:id="@+id/imageButton3"
            android:clickable="true"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:layout_marginRight="3dp"
            android:layout_above="@+id/textView2"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>
