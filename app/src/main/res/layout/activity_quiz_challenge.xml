<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.akili.etc.triviaChallenge.QuizChallengeActivity">
    <LinearLayout

        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:id="@+id/layout1"
        android:layout_weight="1" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="346dp"
                android:columnCount="2"
                android:rowCount="2"
                android:rotation="180"
                android:id="@+id/glayout1"
                android:layout_gravity="center"
                android:rowOrderPreserved="false" >

                <info.hoang8f.widget.FButton

                    fbutton:shadowEnabled="true"
                    fbutton:cornerRadius="25dp"
                    android:layout_width="280dp"
                    android:layout_height="120dp"
                    android:text="Amy"
                    android:id="@+id/answer5"
                    android:textSize = "20dp"
                    android:textColor="#000000"
                    android:background="@drawable/answer_p2_button_rounded_corners"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp" />

                <info.hoang8f.widget.FButton

                    fbutton:shadowEnabled="true"
                    fbutton:cornerRadius="25dp"
                    android:layout_width="280dp"
                    android:layout_height="120dp"
                    android:text="Ardarsh"
                    android:id="@+id/answer6"
                    android:textSize = "20dp"
                    android:textColor="#000000"
                    android:background="@drawable/answer_p2_button_rounded_corners"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp" />

                <info.hoang8f.widget.FButton

                    fbutton:shadowEnabled="true"
                    fbutton:cornerRadius="25dp"
                    android:layout_width="280dp"
                    android:layout_height="120dp"
                    android:text="Ladera"
                    android:id="@+id/answer7"
                    android:textSize = "20dp"
                    android:textColor="#000000"
                    android:background="@drawable/answer_p2_button_rounded_corners"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />

                <info.hoang8f.widget.FButton

                    fbutton:shadowEnabled="true"
                    fbutton:cornerRadius="25dp"
                    android:layout_width="280dp"
                    android:layout_height="120dp"
                    android:text="Ruchi"
                    android:id="@+id/answer8"
                    android:textSize = "20dp"
                    android:textColor="#000000"
                    android:background="@drawable/answer_p2_button_rounded_corners"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp" />

            </GridLayout>

            <TextView
                android:layout_width="110dp"
                android:layout_height="82dp"
                android:rotation="180"
                android:textSize="70sp"
                android:id="@+id/timerUp"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="20dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <info.hoang8f.widget.FButton
                    fbutton:buttonColor="#ffc107"
                    fbutton:shadowEnabled="true"
                    fbutton:cornerRadius="20dp"
                    android:layout_width="555dp"
                    android:layout_height="90dp"
                    android:id="@+id/buzzup"
                    android:background="@drawable/button_bg_rounded_corners"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:text="I KNOW!"
                    android:rotation="180"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="60dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:rotation="180"
                    android:id="@+id/player2Name"
                    android:textColor="#FFFFFF"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="49dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/player2Score"
                    android:rotation="180"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentBottom="true" />

                <TextSwitcher
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textSwitcherUp"
                    android:rotation="180"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="50dp"
                    android:layout_above="@+id/player2Score"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Get Ready!"
                    android:textSize="40dp"
                    android:textColor="#FFFFFF"
                    android:rotation="180"
                    android:id="@+id/getReadyTop"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />


                <info.hoang8f.widget.FButton
                    android:layout_width="555dp"
                    android:layout_height="60dp"
                    android:text="Next"
                    android:id="@+id/nextButtonup"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:rotation="180"
                    android:background="@drawable/answer_next_button_rounded_corners"
                    android:layout_gravity="left|bottom"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="54dp" />

            </RelativeLayout>

        </FrameLayout>

    </LinearLayout>
    <LinearLayout

        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:id="@+id/layout2"
        android:layout_weight="1" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="346dp"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_gravity="center"
                android:id="@+id/glayout2"
                android:rowOrderPreserved="false"
                android:layout_margin="2dp">

                <info.hoang8f.widget.FButton

                    fbutton:shadowEnabled="true"
                    fbutton:cornerRadius="25dp"
                    android:layout_width="280dp"
                    android:layout_height="120dp"
                    android:text="Amy"
                    android:id="@+id/answer1"
                    android:textSize = "20dp"
                    android:textColor="#000000"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp" />

                <info.hoang8f.widget.FButton
                    fbutton:shadowEnabled="true"
                    fbutton:cornerRadius="25dp"
                    android:layout_width="280dp"
                    android:layout_height="120dp"
                    android:text="Ardarsh"
                    android:id="@+id/answer2"
                    android:textSize = "20dp"
                    android:textColor="#000000"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />

                <info.hoang8f.widget.FButton

                    fbutton:shadowEnabled="true"
                    fbutton:cornerRadius="25dp"
                    android:layout_width="280dp"
                    android:layout_height="120dp"
                    android:text="Ladera"
                    android:id="@+id/answer3"
                    android:textSize = "20dp"
                    android:textColor="#000000"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp" />

                <info.hoang8f.widget.FButton

                    fbutton:shadowEnabled="true"
                    fbutton:cornerRadius="25dp"
                    android:layout_width="280dp"
                    android:layout_height="120dp"
                    android:text="Ruchi"
                    android:id="@+id/answer4"
                    android:textSize = "20dp"
                    android:textColor="#000000"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />
            </GridLayout>

            <TextView
                android:layout_width="110dp"
                android:layout_height="82dp"
                android:textSize="70sp"
                android:id="@+id/timerDown"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="20dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <info.hoang8f.widget.FButton
                    fbutton:buttonColor="#ffc107"
                    fbutton:shadowEnabled="true"
                    fbutton:cornerRadius="20dp"
                    android:layout_width="555dp"
                    android:layout_height="90dp"
                    android:id="@+id/buzzdown"
                    android:background="@drawable/button_bg_rounded_corners"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:text="I KNOW!"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="47dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:textColor="#FFFFFF"
                    android:id="@+id/player1Name"
                    android:layout_marginTop="49dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:id="@+id/player1Score"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <TextSwitcher
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textSwitcherDown"
                    android:layout_marginTop="50dp"
                    android:textSize = "20sp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_below="@+id/player1Score"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="0dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Get Ready!"
                    android:textSize="40dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/getReadyDown"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <info.hoang8f.widget.FButton
                    android:layout_width="555dp"
                    android:layout_height="60dp"
                    android:text="Next"
                    android:id="@+id/nextButtondown"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:background="@drawable/answer_next_button_rounded_corners"
                    android:layout_gravity="left|bottom"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="61dp" />
            </RelativeLayout>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>

