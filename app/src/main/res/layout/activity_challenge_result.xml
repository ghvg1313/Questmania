<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/challenge_forum_background"
    tools:context="com.akili.etc.triviacrashsaga.PartyMode.ChallengeResultActivity">

    <info.hoang8f.widget.FButton
        android:id="@+id/nextButton"
        fbutton:buttonColor="@color/trivia_quiz_next_button_color"
        fbutton:shadowColor="@color/trivia_quiz_next_button_shadow_color"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="15dp"
        android:textColor = "#ffffff"
        android:textSize = "24dp"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="Next"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:v_styleId="@array/button_customSize"/>

    <com.github.mikephil.charting.charts.HorizontalBarChart
        android:id="@+id/playerChart"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:layout_above="@+id/nextButton" />

</RelativeLayout>
