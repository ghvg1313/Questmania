<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/challenge_background_2"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    tools:context="com.akili.etc.triviacrashsaga.PartyMode.AddPlayerActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="586dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="860dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">



                <info.hoang8f.widget.FButton
                    fbutton:buttonColor="@color/trivia_quiz_next_button_color"
                    fbutton:shadowColor="@color/trivia_quiz_next_button_shadow_color"
                    fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="5dp"
                    fbutton:cornerRadius="15dp"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:id="@+id/startButton"
                    android:text = "Next"
                    android:textColor = "#ffffff"
                    android:textSize = "24dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@+id/player6InputTextView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="39dp" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:maxLength="16"
                    android:inputType="text"
                    android:hint="Player1"
                    android:textSize="25dp"
                    android:id="@+id/player1InputTextView"
                    android:layout_weight="0.68"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="37dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:inputType="text"
                    android:maxLength="16"
                    android:hint="Player2"
                    android:textSize="25dp"
                    android:id="@+id/player2InputTextView"
                    android:layout_weight="0.68"
                    android:layout_below="@+id/player1InputTextView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="37dp"
                    android:paddingTop="0dp"
                    android:padding="0dp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/p1_color"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:background="@drawable/circle1"
                    android:layout_weight="0.33"
                    android:layout_marginRight="0dp"
                    android:layout_alignBottom="@+id/player1InputTextView"
                    android:layout_toStartOf="@+id/player1InputTextView"
                    android:layout_marginBottom="5dp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/p2_color"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:background="@drawable/circle2"
                    android:layout_weight="0.33"
                    android:layout_alignBottom="@+id/player2InputTextView"
                    android:layout_toStartOf="@+id/player2InputTextView"
                    android:layout_marginTop="0dp"
                    android:paddingTop="0dp"
                    android:padding="0dp"
                    android:layout_marginBottom="0dp" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:inputType="text"
                    android:maxLength="16"
                    android:hint="Player3"
                    android:textSize="25dp"
                    android:id="@+id/player3InputTextView"
                    android:layout_weight="0.68"
                    android:layout_below="@+id/p2_color"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="18dp" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:inputType="text"
                    android:maxLength="16"
                    android:hint="Player4"
                    android:textSize="25dp"
                    android:id="@+id/player4InputTextView"
                    android:layout_weight="0.68"
                    android:layout_below="@+id/player3InputTextView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="7dp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/p3_color"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:background="@drawable/circle3"
                    android:layout_weight="0.33"
                    android:layout_above="@+id/player4InputTextView"
                    android:layout_toStartOf="@+id/player3InputTextView"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="0dp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/p4_color"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:background="@drawable/circle4"
                    android:layout_weight="0.33"
                    android:layout_below="@+id/player3InputTextView"
                    android:layout_alignStart="@+id/p3_color"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="0dp" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:inputType="text"
                    android:maxLength="16"
                    android:hint="Player5"
                    android:textSize="25dp"
                    android:id="@+id/player5InputTextView"
                    android:layout_weight="0.68"
                    android:layout_below="@+id/p4_color"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="10dp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/p5_color"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:background="@drawable/circle5"
                    android:layout_weight="0.33"
                    android:layout_alignTop="@+id/player5InputTextView"
                    android:layout_toStartOf="@+id/player5InputTextView"
                    android:layout_marginTop="0dp"
                    android:paddingBottom="0dp"
                    android:layout_marginBottom="0dp" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:inputType="text"
                    android:maxLength="16"
                    android:hint="Player6"
                    android:textSize="25dp"
                    android:id="@+id/player6InputTextView"
                    android:layout_weight="0.68"
                    android:layout_below="@+id/p5_color"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="15dp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/p6_color"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:background="@drawable/circle6"
                    android:layout_weight="0.33"
                    android:layout_alignBottom="@+id/player6InputTextView"
                    android:layout_toStartOf="@+id/player6InputTextView"
                    android:layout_marginTop="0dp" />


            </RelativeLayout>

        </RelativeLayout>

    </TableLayout>

</LinearLayout>
