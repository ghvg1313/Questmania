<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/challenge_forum_background"
    tools:context="com.akili.etc.triviacrashsaga.PartyMode.PersonalChallengeForumActivity">

    <TextView
        android:id="@+id/challengeTitle"
        android:text="You've completed Wukawuka jaja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="25sp"
        android:textColor="@color/navigation_color"/>

    <TextView
        android:id="@+id/standardTextView"
        android:text="You've completed Wukawuka jaja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/nothingTitle"
        android:text="Skill Journal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="60dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="25sp"
        android:textColor="@color/navigation_color"/>

    <TextView
        android:id="@+id/feelTextView"
        android:text="How do you feel playing Wukawuka jaja?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/feelingEditText"
        android:background="#ffffff"
        android:inputType="textMultiLine"
        android:padding = "10sp"
        android:hint="I felt..."
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="top|left" />

    <info.hoang8f.widget.FButton
        fbutton:buttonColor="@color/trivia_quiz_next_button_color"
        fbutton:shadowColor="@color/trivia_quiz_next_button_shadow_color"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/completeButton"
        android:text = "Complete Challenge"
        android:textColor = "#ffffff"
        android:textSize = "24sp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <info.hoang8f.widget.FButton
        fbutton:buttonColor="@color/trivia_quiz_next_button_color"
        fbutton:shadowColor="@color/trivia_quiz_next_button_shadow_color"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/cancelButton"
        android:text = "I did not do this Challenge"
        android:textColor = "#ffffff"
        android:textSize = "24sp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />




</LinearLayout>
